<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_desc_event_image"
            android:background="#EEE" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Event title" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tue, 29 Oct 2025 • 14:00 – 16:00"
            android:textColor="?attr/colorSecondary" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Community Hall, Soweto"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Short description of the event goes here." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenMap"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open in Maps"
            android:layout_marginTop="10dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconGravity="textStart"
            app:iconPadding="8dp"/>

        <ImageButton
            android:id="@+id/btnOverflow"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:contentDescription="@string/content_desc_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_notifications_black_24dp"
            app:tint="?attr/colorOnSurface"
            android:visibility="gone"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
