<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_background"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 🔍 Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search qualifications..."
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:background="@android:drawable/edit_text"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualifications"
            android:textSize="22sp"
            android:textColor="#8B0000"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Qualification 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Management"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enhance your business skills. Enrol in Business Management Certification Course."
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnEnroll_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Enrol Now"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
