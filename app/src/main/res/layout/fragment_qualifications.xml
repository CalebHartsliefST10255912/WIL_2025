<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 🔍 Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search qualifications..."
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:background="@android:drawable/edit_text"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualifications"
            android:textSize="22sp"
            android:textColor="#8B0000"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Qualification 1: Business Management -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_block"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Management"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enhance your business skills. Enrol in Business Management Certification Course."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnEnroll_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/enrol_red"
                android:text="Enrol Now"
                android:textColor="@color/white"
                app:layout_constraintEnd_toMiddleOf="parent" />
        </LinearLayout>

        <!-- Qualification 2: Agricultural Studies -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_block"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agricultural Studies"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variety of courses and subjects related to the field of agriculture."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnEnroll_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/enrol_red"
                android:text="Enrol Now"
                android:textColor="@color/white"
                app:layout_constraintEnd_toMiddleOf="parent" />
        </LinearLayout>

        <!-- Qualification 3: Food Technology -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_block"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Technology"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food production, processing and quality management."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnEnroll_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/enrol_red"
                android:text="Enrol Now"
                android:textColor="@color/white"
                app:layout_constraintEnd_toMiddleOf="parent" />
        </LinearLayout>

        <!-- Qualification 4: Community Development -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_block"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community Development"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empower participants to identify barriers, and develop leadership and practical skills."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnEnroll_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/enrol_red"
                android:text="Enrol Now"
                android:textColor="@color/white"
                app:layout_constraintEnd_toMiddleOf="parent" />
        </LinearLayout>

        <!-- Qualification 5: Financial Literacy and Budgeting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_block"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial Literacy and Budgeting"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gain essential skills to manage income, control expenses, and build financial resilience."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnEnroll_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/enrol_red"
                android:text="Enrol Now"
                android:textColor="@color/white"
                app:layout_constraintEnd_toMiddleOf="parent" />
        </LinearLayout>

        <!-- Qualification 6: Marketing and Sales Strategies -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_block"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marketing and Sales Strategies"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Understand consumer behavior and learn to build, brand, and grow your business using effective sales tactics."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnEnroll_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/enrol_red"
                android:text="Enrol Now"
                android:textColor="@color/white"
                app:layout_constraintEnd_toMiddleOf="parent" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>