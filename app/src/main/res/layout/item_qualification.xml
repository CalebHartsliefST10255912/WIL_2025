<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_card_qualification"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="6dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- overflow stays hidden unless you need it -->
    <ImageButton
        android:id="@+id/btnOverflow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:contentDescription="@string/content_desc_more"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/more_vert_24px"
        android:visibility="gone"
        app:tint="@color/nav_white" />

    <TextView
        android:id="@+id/tvTitle"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:textColor="@color/nav_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDesc"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textColor="#E6F8F8F9"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnEnrol"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="Enrol Now"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/blue_main"
        android:background="@drawable/ripple_button"
        app:backgroundTint="@null"/>

</LinearLayout>
