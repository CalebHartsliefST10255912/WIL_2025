<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Full name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputFullNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@color/org_gold"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="#CCFFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ID number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputIdNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="ID Number"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@color/org_gold"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputIdNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="#CCFFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date of Birth (popup date picker) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputDobLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Date of Birth (YYYY-MM-DD)"
            app:endIconMode="custom"
            app:endIconTint="@color/org_gold"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@color/org_gold"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:importantForAutofill="no"
                android:textColor="@color/black"
                android:textColorHint="#CCFFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
