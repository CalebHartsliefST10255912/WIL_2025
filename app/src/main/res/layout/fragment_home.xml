<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/fragment_background">

    <LinearLayout
        android:id="@+id/homeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/transparent">

        <!-- Hero / Mission (flat, no shadow) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@color/blue_main"
            app:strokeColor="#26FEBA70"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            android:stateListAnimator="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/transparent">

                <TextView
                    android:id="@+id/txtOrgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold"
                    android:textColor="@color/nav_white" />

                <TextView
                    android:id="@+id/txtMission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_mission"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="#E6F8F8F9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent">

                    <!-- Gold primary -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDonate"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cta_donate"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_main"
                        app:backgroundTint="@color/org_gold"
                        app:rippleColor="#33FEBA70"
                        app:icon="@drawable/ic_notifications_black_24dp"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart"
                        app:iconTint="@color/blue_main" />

                    <!-- Gold outlined -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVolunteer"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/cta_volunteer"
                        android:textAllCaps="false"
                        android:textColor="@color/org_gold"
                        app:strokeColor="@color/org_gold"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="#33FEBA70"
                        app:icon="@drawable/ic_notifications_black_24dp"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart"
                        app:iconTint="@color/org_gold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Impact Stats -->
        <TextView
            android:id="@+id/labelImpact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/home_impact"
            app:cardBackgroundColor="@android:color/transparent"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/nav_white"
            android:shadowColor="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@android:color/transparent">

            <com.example.wil_byte_horizon.ui.home.views.StatCardView
                android:id="@+id/cardBeneficiaries"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <com.example.wil_byte_horizon.ui.home.views.StatCardView
                android:id="@+id/cardVolunteers"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <com.example.wil_byte_horizon.ui.home.views.StatCardView
                android:id="@+id/cardProjects"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Programs / What we do -->
        <TextView
            android:id="@+id/labelPrograms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/home_programs"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/nav_white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPrograms"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:overScrollMode="never"
            android:background="@android:color/transparent" />

        <!-- Transparency strip (flat, no shadow) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTransparency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@color/blue_main"
            app:strokeColor="#26FEBA70"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            android:stateListAnimator="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent">

                <TextView
                    android:id="@+id/txtTransparencyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_transparency_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold"
                    android:textColor="@color/nav_white" />

                <TextView
                    android:id="@+id/txtTransparency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/home_transparency_desc"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="#E6F8F8F9" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- News / Updates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/labelNews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_news"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/nav_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAllNews"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cta_view_all"
                android:textAllCaps="false"
                android:textColor="@color/org_gold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:overScrollMode="never"
            android:background="@android:color/transparent" />
    </LinearLayout>
</ScrollView>
