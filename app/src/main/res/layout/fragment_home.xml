<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/homeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hero / Mission -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtOrgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_mission"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDonate"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cta_donate"
                        app:icon="@drawable/ic_notifications_black_24dp"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVolunteer"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/cta_volunteer"
                        app:icon="@drawable/ic_notifications_black_24dp"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Impact Stats -->
        <!-- Impact Stats -->
        <TextView
            android:id="@+id/labelImpact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/home_impact"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.example.wil_byte_horizon.ui.home.views.StatCardView
                android:id="@+id/cardBeneficiaries"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:labelText="@string/stat_beneficiaries" />

            <com.example.wil_byte_horizon.ui.home.views.StatCardView
                android:id="@+id/cardVolunteers"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:labelText="@string/stat_volunteers" />

            <com.example.wil_byte_horizon.ui.home.views.StatCardView
                android:id="@+id/cardProjects"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:labelText="@string/stat_projects" />
        </LinearLayout>

        <!-- Programs / What we do -->
        <TextView
            android:id="@+id/labelPrograms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/home_programs"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPrograms"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:overScrollMode="never" />

        <!-- Transparency strip -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTransparency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtTransparencyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_transparency_title"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTransparency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/home_transparency_desc"
                    android:textAppearance="?attr/textAppearanceBodySmall" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- News / Updates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/labelNews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_news"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAllNews"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cta_view_all" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:overScrollMode="never" />

        <!-- Partners -->
        <TextView
            android:id="@+id/labelPartners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/home_partners"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <LinearLayout
            android:id="@+id/partnersRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner A" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner B" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner C" />
        </LinearLayout>

        <!-- Learn more / Contact -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLearnMore"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/cta_learn_more" />

    </LinearLayout>
</ScrollView>
