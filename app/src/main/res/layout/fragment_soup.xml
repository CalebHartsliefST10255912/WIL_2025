<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bannerViewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:dotsColor="@android:color/darker_gray"
            app:selectedDotColor="@android:color/holo_green_light"
            app:dotsCornerRadius="8dp"
            app:dotsSpacing="8dp"
            app:dotsSize="12dp" />

        <!-- CardView for Overview -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginTop="16dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Card Title -->
                <TextView
                    android:id="@+id/overviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soup Kitchen Overview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#607D8B"
                    android:padding="8dp" />

                <!-- Overview Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="The Soup Kitchen is a vital community resource dedicated to alleviating hunger and providing nourishment to those in need. We operate on the principle of compassion and inclusivity, welcoming everyone regardless of their background or circumstances. Our mission is to serve hot, nutritious meals to individuals and families facing food insecurity, ensuring that no one in our community goes hungry."
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <!-- Image inside card -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/soup1" />

                <!-- Footer inside card -->
                <TextView
                    android:id="@+id/ourChefs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Chefs ★★★"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:background="#EEEEEE"
                    android:padding="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
