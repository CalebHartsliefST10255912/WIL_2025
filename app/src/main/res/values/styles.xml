<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BottomNavigationView without M3 active indicator pill -->
    <style name="Widget.MyApp.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Keep your existing state lists -->
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>

        <!-- No background highlight/ripple behind items -->
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

</resources>
