<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.wil_byte_horizon.ui.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_enrol"
        android:name="com.example.wil_byte_horizon.ui.enrol.EnrolFragment"
        android:label="@string/title_qualifications"
        tools:layout="@layout/fragment_enrol" />

    <fragment
        android:id="@+id/navigation_event"
        android:name="com.example.wil_byte_horizon.ui.event.EventFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_event" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.wil_byte_horizon.ui.about.AboutFragment"
        android:label=""
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.wil_byte_horizon.ui.contact.ContactFragment"
        android:label="@string/contact_title"
        tools:layout="@layout/fragment_contact" />

    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.example.wil_byte_horizon.ui.admin.AdminDashboardFragment"
        android:label="Admin"
        tools:layout="@layout/fragment_admin_dashboard" />

    <fragment
        android:id="@+id/eventEditorFragment"
        android:name="com.example.wil_byte_horizon.ui.admin.EventEditorFragment"
        android:label="New Event"
        tools:layout="@layout/fragment_event_editor" />

    <fragment
        android:id="@+id/qualificationEditorFragment"
        android:name="com.example.wil_byte_horizon.ui.admin.QualificationEditorFragment"
        android:label="New Qualification"
        tools:layout="@layout/fragment_qualification_editor" />

    <!-- âœ… New details destination (no Safe Args needed) -->
    <fragment
        android:id="@+id/qualificationDetailsFragment"
        android:name="com.example.wil_byte_horizon.ui.enrol.QualificationDetailsFragment"
        android:label="Qualification Details"
        tools:layout="@layout/fragment_qualification_details">
        <!-- Optional: declares expected arg, even without Safe Args -->
        <argument
            android:name="qualificationId"
            app:argType="string" />
    </fragment>

    <!-- Your existing admin actions can remain if used elsewhere -->
    <action
        android:id="@+id/action_navigation_admin_to_eventEditorFragment"
        app:destination="@id/eventEditorFragment" />
    <action
        android:id="@+id/action_navigation_admin_to_qualificationEditorFragment"
        app:destination="@id/qualificationEditorFragment" />

</navigation>
